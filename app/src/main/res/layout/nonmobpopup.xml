<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="310dp"
    
    android:orientation="vertical" >
        
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@mipmap/ghaneelyextrabg"
    tools:ignore="UselessParent">

<RelativeLayout
        android:id="@+id/top_header_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip" >

        <ImageView
            android:id="@+id/close_player"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:scaleType="center"
            android:src="@mipmap/closefinal"
            android:contentDescription="@string/close"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"

        >

        <com.binarywaves.ghaneely.ghannelystyles.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@string/mobileerror"
            android:textColor="@color/white" />

    </LinearLayout>
</RelativeLayout>
</LinearLayout>