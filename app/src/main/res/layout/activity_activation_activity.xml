<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/splash"
    android:layout_height="match_parent"
    >


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="0.7"
            android:layout_weight="0.7">

            <ImageView
                android:id="@+id/logo_iv"
                android:layout_width="123dp"
                android:layout_height="68dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/registerlogo"
                tools:ignore="ContentDescription" />

            <com.binarywaves.ghaneely.ghannelystyles.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="@string/entercode"
                android:layout_gravity="center"/>

            <com.binarywaves.ghaneely.ghannelystyles.CustomEditText
                android:id="@+id/activationnumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_shape"
                android:textCursorDrawable="@color/ghaneely_orange"
                android:gravity="center"
                android:hint="@string/Activation_title"
                android:textColor="@color/white"
                android:textColorHint="@color/fadedgray"
                android:textSize="16sp" />


            <!--
            <TextView
                android:id="@+id/language_textview"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/etpassword"
                android:layout_alignRight="@+id/etpassword"
                android:layout_below="@+id/etpassword"
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:drawSelectorOnTop="true"
                android:drawableRight="@mipmap/dwn"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:textSize="16sp" />



            -->



            <com.binarywaves.ghaneely.ghannelystyles.CustomButton
                android:id="@+id/active_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"

                android:layout_gravity="center_horizontal"
                android:background="@color/orangelogocolor"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <com.binarywaves.ghaneely.ghannelystyles.CustomTextView
                android:id="@+id/resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:text="@string/resendcode"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"

            android:layout_weight="0.3">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/orangelogo"
                    tools:ignore="ContentDescription"
                    />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <include
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/progressbarwhell"
        android:clickable="false"
        android:indeterminate="true"
        android:visibility="gone"
        />


</FrameLayout>