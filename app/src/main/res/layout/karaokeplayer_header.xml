<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/top_header_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/close_player"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@mipmap/closefinal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/song_titles_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="1dip"
            android:layout_marginBottom="2dp">

            <com.binarywaves.ghaneely.ghannelystyles.CustomTextViewSemiBold
                android:id="@+id/tvsingername"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/albumtextsize" />

            <com.binarywaves.ghaneely.ghannelystyles.CustomTextView
                android:id="@+id/tvalbumname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvsingername"
                android:gravity="center|top"
                android:lines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/followtextsize" />
      </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/song_titles_relative">

            <ImageView
                android:id="@+id/Image_player"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/app_name"
                android:padding="2dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/defualt_img" />



        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>