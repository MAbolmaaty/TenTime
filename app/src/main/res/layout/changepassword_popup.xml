<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@color/darkgray"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.binarywaves.ghaneely.ghannelystyles.CustomTextviewBold
            android:id="@+id/tvtitle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/changepass"
            android:textColor="@color/ghaneely_orange"
            android:textSize="20sp">

        </com.binarywaves.ghaneely.ghannelystyles.CustomTextviewBold>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp">

            <ImageView
                android:id="@+id/ivold"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/circlepassword" />

            <com.binarywaves.ghaneely.ghannelystyles.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/ivold"
                android:layout_toRightOf="@id/ivold"
                android:text="@string/enteroladpass"
                android:textColor="@color/fadedgray"
                android:textSize="16sp" />
        </RelativeLayout>

        <com.binarywaves.ghaneely.ghannelystyles.CustomEditText
            android:id="@+id/old_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:textCursorDrawable="@color/ghaneely_orange"
            android:textColor="@color/white"
            android:textSize="16sp">

        </com.binarywaves.ghaneely.ghannelystyles.CustomEditText>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp">

            <ImageView
                android:id="@+id/ivnew"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/circlepassword" />

            <com.binarywaves.ghaneely.ghannelystyles.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/ivnew"
                android:layout_toRightOf="@id/ivnew"
                android:text="@string/enternewpass"
                android:textColor="@color/fadedgray"
                android:textSize="16sp" />
        </RelativeLayout>

        <com.binarywaves.ghaneely.ghannelystyles.CustomEditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:textCursorDrawable="@color/ghaneely_orange"

            android:textColor="@color/white"
            android:textSize="16sp">

        </com.binarywaves.ghaneely.ghannelystyles.CustomEditText>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp">

            <ImageView
                android:id="@+id/ivconfirm"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/circlepassword" />

            <com.binarywaves.ghaneely.ghannelystyles.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/ivconfirm"
                android:layout_toRightOf="@id/ivconfirm"
                android:text="@string/confirmpass"
                android:textColor="@color/fadedgray"
                android:textSize="16sp" />
        </RelativeLayout>
        <com.binarywaves.ghaneely.ghannelystyles.CustomEditText
            android:id="@+id/retype_new_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:textCursorDrawable="@color/ghaneely_orange"

            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp">

        </com.binarywaves.ghaneely.ghannelystyles.CustomEditText>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:weightSum="1"
            android:orientation="horizontal">

            <com.binarywaves.ghaneely.ghannelystyles.CustomButton
                android:id="@+id/change"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="0.5"
                android:background="@color/ghaneely_orange"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/albumtextsize"
                tools:ignore="ButtonStyle" />

            <com.binarywaves.ghaneely.ghannelystyles.CustomButton
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@color/thinblack"
                android:text="@string/cancel"

                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/albumtextsize"

                tools:ignore="ButtonStyle" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>