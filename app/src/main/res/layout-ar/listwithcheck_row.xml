<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkgray">

    <RelativeLayout
        android:id="@+id/rlcont"
        android:clickable="true"
android:focusable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="5dip"
        android:paddingLeft="5dip">

        <RelativeLayout
            android:id="@+id/controoler"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp">

            <Button
                android:id="@+id/checkBox1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:background="@mipmap/uncheck"
                android:text="" />

            <Button
                android:id="@+id/checkBox2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:background="@mipmap/check"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imagesingerIcon"
            android:layout_width="@dimen/albumlisticonheight_width"
            android:layout_height="@dimen/albumlisticonheight_width"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/defualt_img"
            android:contentDescription="@string/app_name" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_toRightOf="@+id/controoler"
            android:layout_toLeftOf="@id/imagesingerIcon"
            android:layout_toStartOf="@+id/controoler">

            <com.binarywaves.ghaneely.ghannelystyles.CustomtextList
                android:id="@+id/tvsingerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="right|end"

                android:ellipsize="end"
                android:maxLines="1"

                android:textSize="15sp"
                android:textColor="@color/white" />
            <com.binarywaves.ghaneely.ghannelystyles.CustomtextList
                android:id="@+id/tvsongName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="right|end"
                android:ellipsize="end"
                android:layout_below="@id/tvsingerName"

                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="@color/grayText" />

            <com.binarywaves.ghaneely.ghannelystyles.CustomtextList
                android:id="@+id/tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvsongName"
                android:layout_marginTop="5dp"
                android:gravity="right|end"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/grayText"

                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>