    <ListView
        android:id="@+id/player_list1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_weight="0.1"
        android:cacheColorHint="#00000000"
        android:dividerHeight="1dp"
        android:divider="@android:color/transparent"
        android:layout_marginBottom="10dip" >

        </ListView>

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/darkgray"

        android:orientation="horizontal" >

        <com.binarywaves.ghaneely.ghannelystyles.CustomButton
            android:id="@+id/cancel"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="3dp"

            android:layout_toRightOf="@+id/change"
            android:background="@color/thinblack"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textSize="@dimen/albumtextsize"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            tools:ignore="RtlHardcoded" />

        <com.binarywaves.ghaneely.ghannelystyles.CustomButton
            android:id="@+id/change"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"

            android:background="@color/ghaneely_orange"
            android:textAllCaps="false"
            android:textSize="@dimen/albumtextsize"
            android:text="@string/cretaeplaylist"
            android:textColor="@color/white"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

</LinearLayout>