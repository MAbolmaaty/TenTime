<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_alignParentTop="true"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/framecontanier"
        android:rotationY="180"
        android:layout_height="170dp">
        <ImageView
            android:id="@+id/ivposter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"

            android:contentDescription="@string/app_name"
            android:src="@mipmap/playvideo" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/darkgray"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/framecontanier"
        android:layout_marginBottom="5dp"

        >
        <com.binarywaves.ghaneely.ghannelystyles.CustomTextviewBold
            android:id="@+id/tvsingername"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:rotationY="180"


            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/tvsongname"
            android:layout_alignStart="@+id/tvsongname"
            android:singleLine="true" />

        <com.binarywaves.ghaneely.ghannelystyles.CustomTextView
            android:id="@+id/tvsongname"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/tvsingername"
            android:ellipsize="marquee"
            android:gravity="center"
            android:textSize="13sp"
            android:rotationY="180"

            android:textColor="@color/white"
            android:layout_toRightOf="@+id/controller"
            android:layout_toEndOf="@+id/controller"
            android:singleLine="true" />

        <RelativeLayout
            android:id="@+id/controller"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"

            >
            <ImageView
                android:id="@+id/ivplay"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:background="@mipmap/videoicon"
                android:contentDescription="@string/app_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:rotationY="180"

                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
